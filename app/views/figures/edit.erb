
  
<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label>Name</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name%>"><br></br>

<h2>Titles<h2>
<h3>Select from exising</h3>
<% @titles.each do |title|%>
<input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value=<%=title.id%> <%= 'checked' if @figure.titles.include?(title)%>><%= title.name %><br>

<%end%>
<h3>New Title</h3>
<label>Name: </label>
<input type="text" id="new_title" name="title[name]"><br>
<br>


<h2>Landmarks<h2>
<h3>Select from exising</h3>
<% @landmarks.each do |landmark|%>
<input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value=<%=landmark.id%> <%= 'checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %><br>
<%end%>
<h3>New Landmark</h3>
<label>Name: </label>
<input type="text" id="new_landmark" name="landmark[name]">
<label>Year: </label>
<input type="text" id="landmark_year" name="landmark[year_completed]"><br>
<br>
<button type="submit">Edit Figure</button>
</form>
