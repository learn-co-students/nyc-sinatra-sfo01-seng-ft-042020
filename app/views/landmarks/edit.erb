<a class="button" href="/">Home</a>
<a class="button" href="/landmarks">Landmarks</a>
<h2>Edit Historical Landmark</h2>

<form method="POST" action="/landmarks/<%= @landmark.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Landmark:</label>
  <input 
    type='text'
    name='landmark[name]' 
    value='<%= @landmark.name %>'
    id='name'
  >
  <label>Year Completed:</label>
  <input 
    type='text' 
    name='landmark[year_completed]' 
    value='<%= @landmark.year_completed %>'
    id='year_completed'
  >
  <br><br>
  <input type='submit' value='Edit Landmark'>
</form>


